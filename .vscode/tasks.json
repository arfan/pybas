{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run PyBAS Program",
      "type": "shell",
      "command": "python3",
      "args": ["${workspaceFolder}/pybas", "${file}"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Format PyBAS Code",
      "type": "shell",
      "command": "python3",
      "args": ["${workspaceFolder}/pybasfmt", "${file}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Open PyBAS REPL",
      "type": "shell",
      "command": "python3",
      "args": ["${workspaceFolder}/pybasrepl"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}